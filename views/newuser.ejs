  <body>
    <div class="jumbotron text-center">
      <h1 id="header">Create your account</h1>
    </div>
    <form class="form-horizontal" action="/newuser" method="post">
      <div class="form-group">
        <h3>
          <label class="control-label col-sm-2" for="name"> What's your name? </label><br>
          <div class="col-xs-4">
            <input type="text" name="name" class="form-control" id="name" placeholder="Enter your fullname"> <br>
          </div>
        </h3>
      </div>
        <div class="form-group">
          <h3>
            <label class="control-label col-sm-2" for="email"> What's your email? </label><br>
            <div class="col-xs-4">
              <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email"> <br>
            </div>
          </h3>
        </div>
      <div class="form-group">
        <h3>
          <label class="control-label col-sm-2" for="pwd"> Set a password </label><br>
          <div class="col-xs-4">
            <input type="password" name="password" class="form-control" id="pwd" placeholder="Sample: HackerCup123!"> <br>
          </div>
        </h3>
      </div>
      <div class="form-group">
        <h3>
          <label class="control-label col-sm-2" for="date"> When were you born? </label><br>
          <div class="col-xs-4">
            <input type="date" name="birthdate" class="form-control" id="date" placeholder="Enter a valid date"> <br>
          </div>
        </h3>
      </div>
      <div class="form-group">
        <h3>
          <label class="control-label col-sm-2" for="fullname"> Upload a profile photo </label><br>
          <div class="col-xs-4">
            <input type="file" class="form-control" id="result" placeholder="Enter a valid image"> <br>
          </div>
        </h3>
      </div>
      <button type="submit" class+"btn btn-default"> Submit</button>
    </form>
  </body>

